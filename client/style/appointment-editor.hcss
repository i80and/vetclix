.appointment-editor-widget .calendar-month-widget {
    width: 250px;
    height: 250px;
}

.appointment-editor-widget .button-strip {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.appointment-editor-widget input,
.appointment-editor-widget textarea {
    width: 100%;
}

.appointment-editor-widget .condensed-entry-list > div > *:first-child {
    width: 9rem;
}

.appointment-editor-widget .condensed-entry-list > div > * {
    width: 6rem;
}
